{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "process",
			"command": "tsc.cmd",
			"options": {
				"cwd": "${workspaceFolder}\\Client"
			},
			"problemMatcher": [
				"$tsc"
			],
			"group": "build",
			"label": "Build Client"
		},
		{
			"type": "process",
			"command": "npx",
			"args": [
				"webpack"
			],
			"options": {
				"cwd": "${workspaceFolder}\\Client"
			},
			"problemMatcher": [
				"$tsc"
			],
			"group": "build",
			"dependsOn":[
				"Build Client"
			],
			"label": "Build and Pack Client"
		},
		{
			"type": "process",
			"command": "7z.exe",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$tsc"
			],
			"group": "none",
			"args": [
				"a",
				"-mx0",
				"${workspaceFolder}\\Package\\TestWorld.zip",
				"${workspaceFolder}\\Assets\\Worlds\\TestWorld"
			],
			"label": "Package TestWorld"
		}
	]
}